unit untMain;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants,
  System.Classes, Vcl.Graphics, Vcl.Controls, Vcl.Forms, Vcl.Dialogs,
  Vcl.StdCtrls, Vcl.FileCtrl, untTB3Import;

type
  TfrmMain = class(TForm)
    btnIntraDay: TButton;
    btnOpenFile: TButton;
    OpenDialog1: TOpenDialog;
    procedure btnIntraDayClick(Sender: TObject);
    procedure btnOpenFileClick(Sender: TObject);
    procedure FormCreate(Sender: TObject);
  private
    { Private declarations }
    FArquivoEntrada : String;
    objB3Import : TB3Import;
    procedure pGravarTradeIntraDay(const stlColunas: TStringList);
  public
    { Public declarations }
  end;

var
  frmMain: TfrmMain;

implementation

{$R *.dfm}

uses untDataModule;

procedure TfrmMain.btnIntraDayClick(Sender: TObject);
  var
    stlColunas : TStringList;
    arquivoEntrada : TextFile;
    strLinha : String;
    intCnt : Integer;
begin
  stlColunas := TStringList.Create;
  AssignFile(arquivoEntrada, FArquivoEntrada);
  try
    Reset(arquivoEntrada);
    intCnt := 0;
    while not Eof(arquivoEntrada) do
    begin
      Readln(arquivoEntrada, strLinha);
      if intCnt > 0 then
      begin
        stlColunas.Clear;
        ExtractStrings([';'], [], PChar(strLinha), stlColunas);
        pGravarTradeIntraDay(stlColunas);
      end;
      Inc(intCnt);
    end;
  finally
    CloseFile(arquivoEntrada);
    FreeAndNil(stlColunas);
  end;
end;

procedure TfrmMain.btnOpenFileClick(Sender: TObject);
begin
  FArquivoEntrada := '';
  OpenDialog1.InitialDir := 'C:\Temp\B3\';
  if OpenDialog1.Execute() then
    FArquivoEntrada := OpenDialog1.FileName;
  btnIntraDay.Enabled := FileExists(FArquivoEntrada);
end;

procedure TfrmMain.FormCreate(Sender: TObject);
begin
  objB3Import := TB3Import.Create(frmModulo.FDConnection1);
end;

procedure TfrmMain.pGravarTradeIntraDay(const stlColunas: TStringList);
  var
    qryDados : TFDQuery;
begin
  qryDados := TFDQuery.Create(Self);
  try
    qryDados.Connection := FDConnection1;
    qryDados.SQL.Text := 'SELECT * FROM trade_intraday WHERE FALSE';
    qryDados.Open;

    qryDados.Insert;
    qryDados.FieldByName('RptDt').AsDateTime := fEncodarData(stlColunas[0]);
    qryDados.FieldByName('TckrSymb').AsString := stlColunas[1];
    qryDados.FieldByName('UpdActn').AsString := stlColunas[2];
    qryDados.FieldByName('GrssTradAmt').AsFloat := StrToFloat(stlColunas[3]);
    qryDados.FieldByName('TradQty').AsFloat := StrToFloat(stlColunas[4]);
    qryDados.FieldByName('NtryTm').AsString := stlColunas[5];
    qryDados.FieldByName('TradId').AsString := stlColunas[6];
    qryDados.FieldByName('TradgSsnId').AsString := stlColunas[7];
    qryDados.FieldByName('TradDt').AsDateTime := fEncodarData(stlColunas[8]);
    qryDados.Post;
  finally
    FreeAndNil(qryDados);
  end;
end;

end.
